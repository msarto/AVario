            </LinearLayout>
        </LinearLayout>

        <!-- Right pannel -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:orientation="vertical" >

            <!-- Upper right pannel -->
            <!-- We have to draw our own view here, with directions and stuff -->

            <org.avario.ui.view.NavigationView
                android:id="@+id/navLayout"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="#EEEEEE"
/>

            <!-- Lower right pannel -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="right|top"
                android:orientation="vertical" >

                <!-- 1st info line -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="40sp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_border"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="60sp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:gravity="left|center_vertical"
                            android:text="@string/alt"
                            android:textSize="16sp" >
                        </TextView>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center|center_vertical" >

                            <TextView
                                android:id="@+id/altValue"
                                android:layout_width="90sp"
                                android:layout_height="match_parent"
                                android:gravity="center|center_vertical"
                                android:text="@string/nan"
                                android:textSize="35sp" >
                            </TextView>

                            <TextView
                                android:id="@+id/altMeasure"
                                android:layout_width="65sp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="5sp"
                                android:gravity="right|center_vertical"
                                android:text="@string/meters"
                                android:textSize="16sp" >
                            </TextView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <!-- [end] 1st info line -->


                <!-- 2nd info line -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="35sp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_border"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/glastText"
                            android:layout_width="160sp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:gravity="left|center_vertical"
                            android:text="@string/gainedlastmin"
                            android:textSize="15sp" >
                        </TextView>

                        <TextView
                            android:id="@+id/glastValue"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|center_vertical"
                            android:text="@string/nan"
                            android:textSize="26sp" >
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
                <!-- [end] 2nd info line -->


                <!-- 3rd info line -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="35sp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_border"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="100sp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:gravity="left|center_vertical"
                            android:text="@string/gspeed"
                            android:textSize="14sp" >
                        </TextView>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center|center_vertical" >

                            <TextView
                                android:id="@+id/gspeedValue"
                                android:layout_width="60sp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/nan"
                                android:textSize="26sp" >
                            </TextView>

                            <TextView
                                android:id="@+id/gspeedMeasure"
                                android:layout_width="55dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="5sp"
                                android:gravity="center"
                                android:text="@string/kmh"
                                android:textSize="14sp" >
                            </TextView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <!-- [end] 3rd info line -->


                <!-- 4th info line -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="35sp"
                        android:layout_margin="2dp"
                        android:layout_weight=".50"
                        android:background="@drawable/round_border"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/kmValue"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/nan"
                            android:textSize="20sp" >
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="35sp"
                        android:layout_margin="2dp"
                        android:layout_weight="0.50"
                        android:background="@drawable/round_border"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/ftimeValue"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/span"
                            android:textSize="20sp" >
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
                <!-- [end] 4th info line -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/round_border"
                    android:orientation="horizontal" >

                    <org.avario.ui.view.AltitudeView
                        android:id="@+id/altitudeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#EEEEEE" 
                        android:orientation="horizontal"/>
                </LinearLayout>
            </LinearLayout>
