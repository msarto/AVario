            </LinearLayout>

            <LinearLayout
                android:id="@+id/down14"
                android:layout_width="fill_parent"
                android:layout_height="7dp"
                android:layout_margin="1dp"
                android:background="#ff0000" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/down15"
                android:layout_width="fill_parent"
                android:layout_height="7dp"
                android:layout_margin="1dp"
                android:background="#ff0000" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/down16"
                android:layout_width="fill_parent"
                android:layout_height="7dp"
                android:layout_margin="1dp"
                android:background="#ff0000" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/down17"
                android:layout_width="fill_parent"
